datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "./output"
}

model User {
  id              String    @id @default(cuid())
  name            String
  lineUserId      String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  companies       Company[] @relation(name: "CompanyToUser")
  activeCompany   Company?    @relation(name: "ActiveCompanyToUser")
}

model Company {
  id           String   @id @default(cuid())
  companyId    Int      @unique
  refreshToken String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User?     @relation(name: "CompanyToUser", fields: [userId], references: [id], onDelete: Cascade)
  userId       String?
  activeUserId String @unique
  activeUser   User    @relation(name: "ActiveCompanyToUser", fields: [activeUserId], references: [id])

  tags Tag[]
}

model Tag {
  id   String @id @default(cuid())
  name String

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String
}
