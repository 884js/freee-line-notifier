{
  "name": "@app/server",
  "private": true,
  "scripts": {
    "prepare": "npm run prisma:generate",
    "dev": "wrangler dev src/index.ts --env dev",
    "deploy:dev": "wrangler deploy --minify src/index.ts --env dev",
    "prisma:generate": "prisma generate --schema=src/lib/prisma/schema.prisma --no-engine",
    "prisma:migrate:dev": "prisma migrate dev --schema=src/lib/prisma/schema.prisma",
    "prisma:migrate:prod": "prisma migrate deploy --schema=src/lib/prisma/schema.prisma",
    "prisma:format": "prisma format --schema=src/lib/prisma/schema.prisma"
  },
  "dependencies": {
    "@auth/core": "0.37.4",
    "@auth/prisma-adapter": "2.7.4",
    "@hono/auth-js": "1.0.15",
    "@line/bot-sdk": "9.5.2",
    "@line/liff": "2.25.1",
    "@prisma/client": "6.2.1",
    "@prisma/extension-accelerate": "1.2.1",
    "bcryptjs": "2.4.3",
    "hono": "4.6.14"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250109.0",
    "@hono/zod-validator": "0.4.2",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "20.16.0",
    "prisma": "6.2.1",
    "typescript": "5.7.3",
    "wrangler": "3.103.2",
    "zod": "3.24.1"
  }
}